{
  "name": "cameron-d28.github.io",
  "version": "1.0.0",
  "author": "Cameron Davis <cam170@icloud.com>",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss -i src/tailwind.css -o ./build/styles.css",
    "build:html": "cp src/dev.html build/index.html",
    "build": "yarn build:css && yarn build:html",
    "dev:build": "tailwindcss -i src/tailwind.css -o src/styles.css --watch --verbose",
    "dev:serve": "http-server src -c-1",
    "dev": "concurrently  --kill-others -c \"blue.bold,magenta.bold\" \"yarn dev:build\" \"yarn dev:serve\"",
    "test:serve": "http-server src -c-1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.0.0",
    "tailwindcss": "^2.2.7"
  }
}
