{
  "name": "cameron-d28.github.io",
  "version": "1.0.0",
  "author": "Cameron Davis <cam170@icloud.com>",
  "license": "MIT",
  "scripts": {
    "dev:build": "tailwindcss -i src/tailwind.css -o src/styles.css --watch --verbose --minify",
    "dev:serve": "http-server src -c-1",
    "dev": "concurrently  --kill-others -c \"blue.bold,magenta.bold\" \"yarn dev:build\" \"yarn dev:serve\"",
    "build:css": "tailwindcss -i src/tailwind.css -o ./build/styles.css",
    "build:html": "cp src/*.html build/",
    "build:assets": "cp -r src/public build/",
    "build": "yarn build:css && yarn build:html && yarn build:assets",
    "deploy": "yarn build && gh-pages -d build -b main"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.1",
    "http-server": "^14.0.0",
    "tailwindcss": "^3.3.3"
  }
}
